---
import SponsorCard from '@/components/astro/SponsorCard.astro';
import SponsorLogo from '@/components/astro/SponsorLogo.astro';
import Layout from '@/layouts/Layout.astro';
import MembershipCard from '@/components/astro/MembershipCard.astro';
---

<Layout title='Sponsors'>
  <div class='px-2 pb-2 sm:px-4 py-8 md:p-12'>
    <h1 class='text-2xl sm:text-5xl font-bold w-fit mx-auto text-center'>
      Thank you to our sponsors!
    </h1>
    <div
      class='flex flex-col items-center sm:flex-row sm:items-start gap-x-8 mx-auto justify-between px-8 max-w-2xl pb-24'
    >
      <div class='max-w-sm pt-6 sm:pt-24 flex flex-col text-center'>
        <div class='sm:text-xl leading-snug font-semibold text-gray-600'>
          Membership card holders receive the following benefits...
        </div>
      </div>
      <MembershipCard class='w-36 mt-4 sm:mt-8 sm:mr-auto' />
    </div>
    <div class='py-20 sm:py-4'></div>
    <div
      class='flex flex-col items-center gap-y-4 sm:items-stretch sm:flex-row justify-evenly gap-x-2 max-w-4xl mx-auto'
    >
      <SponsorCard
        src='/assets/sponsors/otaku-manga-lounge.jpg'
        href='https://otakulounge.com/en/homepage/'
        alt='O-Taku Manga Lounge'
        description='5% off all manga and 10% off food and beverages'
      />
      <SponsorCard
        src='/assets/sponsors/planete-otaku.png'
        href='https://www.planeteotaku.ca/'
        alt='PlanÃ¨te Otaku'
        description='10% off everything in store'
      />
      <SponsorCard
        src='/assets/sponsors/three-kings-loot.png'
        href='https://www.threekingsloot.com/'
        alt='Three Kings Loot'
        description='10% off everything in store'
      />
    </div>
    <div class='py-8'></div>

    <div class='flex flex-wrap gap-8 justify-center items-center'>
      <SponsorLogo
        href='https://store.udonentertainment.com/'
        src='/assets/sponsors/udon.png'
        alt='UDON Entertainment'
      />
      <SponsorLogo
        href='https://sekaiproject.com/'
        src='/assets/sponsors/sekai.webp'
        alt='Sekai Project'
      />
      <SponsorLogo
        src='/assets/sponsors/rocket.png'
        href='https://rocketpandagames.com/'
        alt='Rocket Panda Games'
      />
    </div>
  </div>
</Layout>
