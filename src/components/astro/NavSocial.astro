---
import { Icon } from 'astro-icon/components';

interface Props {
  name: string;
  href: string;
  size?: number;
  class?: string;
  iconClass?: string;
}

const { name, size, href, class: className, iconClass } = Astro.props;
---

<a
  href={href}
  class:list={[
    'flex h-10 w-10 items-center justify-center rounded-full text-white transition duration-200',
    className,
  ]}
  target='_blank'
>
  <Icon name={name} class={iconClass} />
</a>
